<ul>
  <% @content_files.each do |file, file_info| %>
    <li>
      <a href="<%= file_info[:url_view] %>"><%= file_info[:name] %><a>  (<a href="<%= file_info[:url_edit] %>">edit</a>) 
      <form class="inline" method="post" action="<%= file_info[:url_delete] %>"> 
        <button type="submit">delete</button>
      </form>
    </li>
  <% end %>
</ul>

<a href="/new">New Document</a>

<div class="signedin_note">
  <p>You are signed in as <%= session[:username] %>.</p>

  <form method="post" action="/users/logout">
    <button type="sign_out">Sign Out</button>
  </form>
</div>
